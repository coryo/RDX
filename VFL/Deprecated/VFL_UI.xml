 	  	<Texture name="$parentBackground">
				<Color r=".4" g=".4" b=".4" a="1"/>
			</Texture>
		</Layer>
	</Layers>
	<FontString inherits="GameFontNormal">
		<Color r="1" g="1" b="1" a="1"/>
	</FontString>
	<Scripts>
