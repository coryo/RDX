					<Anchor point="LEFT">
						<Offset><AbsDimension x="1" y="0"/></Offset>
					</Anchor>
				</Anchors>
				<Color r="1.0" g="1.0" b="1.0" a="1.0" />
			</FontString>
		</Layer>
		<Layer level="BACKGROUND">
			<Texture name="$parentBkg" alphaMode="ADD">
				<Color r="0" g="0" b="0.9" a="1"/>
