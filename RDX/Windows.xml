<!--
Windows.xml
RDX5

Basic controls for use with RDX windows.
-->
<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
<!-- RDX UNITFRAME CONTAINER WINDOW TEMPLATE -->
<Frame name="RDXWindowT" movable="true" virtual="true">
	<Backdrop name="$parentBkd" bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border">
		<BackgroundInsets>
			<AbsInset left="4" right="4" top="4" bottom="4" />
		</BackgroundInsets>
		<TileSize><AbsValue val="16"/></TileSize>
		<EdgeSize><AbsValue val="16"/></EdgeSize>
	</Backdrop>
	<Layers>
		<Layer level="ARTWORK">
			<Texture name="$parentTitleD1" file="Interface\TradeSkillFrame\UI-TradeSkill-SkillBorder">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset><AbsDimension x="4" y="-17"/></Offset>
					</Anchor>
					<Anchor point="BOTTOMRIGHT" relativePoint="TOPRIGHT">
						<Offset><AbsDimension x="-4" y="-25"/></Offset>
					</Anchor>
				</Anchors>
				<TexCoords left="0.1" right="1.0" top="0" bottom="0.25"/>
			</Texture>
			<Texture name="$parentTitleBkg">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset><AbsDimension x="5" y="-5"/></Offset>
					</Anchor>
					<Anchor point="BOTTOMRIGHT" relativePoint="TOPRIGHT">
						<Offset><AbsDimension x="-5" y="-21"/></Offset>
					</Anchor>
				</Anchors>
				<Color r="1" g="1" b="1" a="1"/>
				<Gradient orientation="HORIZONTAL">
					<MinColor r="1" g="1" b="1" a="1"/>
					<MaxColor r="0.1" g="0.1" b="0.1" a="1"/>
				</Gradient>
			</Texture>
		</Layer>
		<Layer level="OVERLAY">
			<!-- Icon for buff/debuff -->
			<Texture name="$parentTitleIcon">
				<Size><AbsDimension x="12" y="12"/></Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset><AbsDimension x="7" y="-6"/></Offset>
					</Anchor>
				</Anchors>
			</Texture>
			<!-- Titlebar text content -->
			<FontString name="$parentTitleText" inherits="VFLFont" justifyH="LEFT" justifyV="CENTER">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset><AbsDimension x="25" y="-5"/></Offset>
					</Anchor>
					<Anchor point="BOTTOMRIGHT" relativePoint="TOPRIGHT">
						<Offset><AbsDimension x="-5" y="-24"/></Offset>
					</Anchor>
				</Anchors>
			</FontString>
		</Layer>
	</Layers>
	<Frames>
		<Button name="$parentI">
			<Anchors>
				<Anchor point="TOPLEFT"/>
				<Anchor point="TOPRIGHT">
					<Offset><AbsDimension x="-28" y="-24"/></Offset>
				</Anchor>
			</Anchors>
			<Scripts>
				<OnMouseDown>if(this.OnMouseDown) then this:OnMouseDown(arg1); end</OnMouseDown>
				<OnMouseUp>if(this.OnMouseUp) then this:OnMouseUp(arg1); end</OnMouseUp>
				<OnEnter>if(this.OnEnter) then this:OnEnter(); end</OnEnter>
				<OnLeave>if(this.OnLeave) then this:OnLeave(); end</OnLeave>
			</Scripts>
		</Button>
		<Button name="$parentClose" inherits="RDXXBtnT">
			<Size><AbsDimension x="12" y="12"/></Size>
			<Anchors>
				<Anchor point="TOPRIGHT">
					<Offset><AbsDimension x="-7" y="-6"/></Offset>
				</Anchor>
			</Anchors>
		</Button>
		<Button name="$parentFilter" inherits="RDXFunnelBtnT">
			<Size><AbsDimension x="12" y="12"/></Size>
			<Anchors>
				<Anchor point="RIGHT" relativeTo="$parentClose" relativePoint="LEFT"/>
			</Anchors>
		</Button>
	</Frames>
	<Scripts>
		<OnLoad>RDX.Window.Imbue(this);</OnLoad>
	</Scripts>
</Frame>
