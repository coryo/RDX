<!-- A button that toggles between "percent" and "total" -->	
<Button name="RDXSTypeToggleT" inherits="VFLBtnT" virtual="true">
	<Size><AbsDimension x="35" y="24"/></Size>
	<Scripts>
		<OnShow>
			this:SetText("%");
		</OnShow>
		<OnClick>
			local t = this:GetText();
			if(t == "%") then
				this:SetText("#");
			elseif(t == "#") then
				this:SetText("%M");
			elseif(t == "%M") then
				this:SetText("#M");
			else
				this:SetText("%");
			end
		</OnClick>
	</Scripts>
</Button>
